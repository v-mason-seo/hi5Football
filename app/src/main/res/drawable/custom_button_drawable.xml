<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- default, disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/md_red_400" />
            <gradient android:angle="-90" android:endColor="@color/md_red_400" android:startColor="@color/md_red_400" />
        </shape>
    </item>
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/md_red_500" />
            <gradient android:angle="-90" android:endColor="@color/md_red_500" android:startColor="@color/md_red_500" />
        </shape>
    </item>
    <!-- focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/md_red_400" />
            <solid android:color="@color/md_red_400" />
        </shape>
    </item>
    <!-- default -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/md_red_400" />
            <gradient android:angle="-90" android:endColor="@color/md_red_400" android:startColor="@color/md_red_400" />
        </shape>
    </item>
</selector>