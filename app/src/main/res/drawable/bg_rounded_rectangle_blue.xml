<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- default -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/md_blue_300" />
            <solid android:color="@color/md_blue_300"/>
            <padding
                android:top="6dp"
                android:right="12dp"
                android:bottom="6dp"
                android:left="12dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/md_blue_500" />
            <solid android:color="@color/md_blue_500"/>
            <padding
                android:top="6dp"
                android:right="12dp"
                android:bottom="6dp"
                android:left="12dp"/>
        </shape>
    </item>

    <!-- default, disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="@color/md_grey_400" />
            <solid android:color="@color/md_grey_400"/>
            <padding
                android:top="6dp"
                android:right="12dp"
                android:bottom="6dp"
                android:left="12dp"/>
        </shape>
    </item>

</selector>