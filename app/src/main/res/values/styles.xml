<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/md_grey_800</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ModifyTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/md_blue_500</item>
        <item name="colorPrimaryDark">@color/md_blue_900</item>
        <item name="colorAccent">@color/md_blue_A100</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/md_grey_100</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/md_grey_100</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/md_green_100</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/md_grey_50</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/md_blue_grey_400</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/md_green_500</item>

        <!--<item name="android:iconTint">@color/md_grey_100</item>-->

        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="MyEditTextStyle2" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/md_green_300</item>
        <item name="colorControlNormal">@color/md_grey_400</item>
    </style>

    <style name="MyEditTextStyle3" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/md_green_500</item>
        <item name="colorControlNormal">@color/md_grey_800</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <!--expandedTitleTextAppearance-->
    <style name="expandedTitleTextAppearance">
        <item name="android:textColor">@color/md_amber_700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">2.0</item>
    </style>

    <style name="expandedSubtitleTextAppearance">
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="collapsedTitleTextAppearance">
        <item name="android:textColor">@color/md_amber_300</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="collapsedSubtitleTextAppearance">
        <item name="android:textColor">@color/md_grey_300</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/md_grey_400</item>
        <item name="colorPrimaryDark">@color/md_grey_600</item>
        <item name="colorAccent">@color/md_light_green_400</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="CompetitionTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/md_amber_300</item>
        <item name="colorPrimaryDark">@color/md_amber_400</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MatchTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
