<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--게시글 카드뷰 스타일-->
    <style name="PostCardViewStyle">

        <item name="cardCornerRadius">1dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="cardBackgroundColor">@color/md_white_1000</item>
        
    </style>

    <!-- 카드 게시글의 제목 텍스트 스타일  -->
    <style name="PostCardTitleTextStyle">
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingStart">12sp</item>
        <item name="android:paddingEnd">12sp</item>
        <item name="android:paddingBottom">12sp</item>
    </style>

    <!-- 카드 게시글 미리보기 텍스트 스타일 -->
    <style name="PostCardPreviewTextStyle">
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingStart">12sp</item>
        <item name="android:paddingEnd">12sp</item>
    </style>

    <!-- 카드 게시글 유저명 텍스트 스타일 -->
    <style name="PostCardUserNameTextStyle">
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- 카드 게시글 작성일자 텍스트 스타일 -->
    <style name="PostCardUpdatedTextStyle">
        <item name="android:textColor">@color/md_grey_500</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>


</resources>