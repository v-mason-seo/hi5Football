<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/league_table_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/league_table_status"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/ic_no_change"
        tools:src="@drawable/ic_keyboard_arrow_up"
        tools:tint="@color/md_green_500"/>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>

    <TextView
        android:id="@+id/league_table_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_weight="1"
        android:text="순위"
        tools:text="11"/>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>

    <ImageView
        android:id="@+id/team_emblem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:src="@drawable/ic_empty_emblem_vector_1"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="8">

        <TextView
            android:id="@+id/league_table_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="팀"
            tools:text="Man city"/>

        <TextView
            android:id="@+id/league_table_team_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/league_table_gp"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:gravity="center_horizontal|end"
        tools:text="8"/>

    <TextView
        android:id="@+id/league_table_w"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:gravity="center_horizontal|end"
        tools:text="11"/>

    <TextView
        android:id="@+id/league_table_d"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:gravity="center_horizontal|end"
        tools:text="4"/>

    <TextView
        android:id="@+id/league_table_l"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:gravity="center_horizontal|end"
        tools:text="8"/>

    <TextView
        android:id="@+id/league_table_gs"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:gravity="center_horizontal|end"
        tools:text="8"/>

    <TextView
        android:id="@+id/league_table_ga"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:gravity="center_horizontal|end"
        tools:text="8"/>

    <TextView
        android:id="@+id/league_table_point"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:gravity="center_horizontal|end"
        android:textStyle="bold"
        tools:text="45"/>

</LinearLayout>