<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/league_table_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="@color/md_grey_700"
    android:layout_gravity="center_horizontal">


    <TextView
        android:id="@+id/league_table_team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="팀"
        android:textColor="@color/md_grey_50"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/league_table_gp"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/md_grey_50"
        android:gravity="center_horizontal|end"
        android:text="경기"/>

    <TextView
        android:id="@+id/league_table_w"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/md_grey_50"
        android:gravity="center_horizontal|end"
        android:text="승"/>

    <TextView
        android:id="@+id/league_table_d"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/md_grey_50"
        android:gravity="center_horizontal|end"
        android:text="무"/>

    <TextView
        android:id="@+id/league_table_l"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/md_grey_50"
        android:gravity="center_horizontal|end"
        android:text="패"/>

    <TextView
        android:id="@+id/league_table_gs"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/md_grey_50"
        android:gravity="center_horizontal|end"
        android:text="득"/>

    <TextView
        android:id="@+id/league_table_ga"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/md_grey_50"
        android:gravity="center_horizontal|end"
        android:text="실"/>

    <TextView
        android:id="@+id/league_table_point"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/md_grey_50"
        android:gravity="center_horizontal|end"
        android:text="승점"/>

</LinearLayout>