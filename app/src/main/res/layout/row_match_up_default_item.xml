<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:orientation="vertical"
    android:foreground="?android:selectableItemBackground">

    <!--android:background="?attr/selectableItemBackgroundBorderless"-->
    <!--android:foreground="?android:selectableItemBackground"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_competition"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_competition_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_600"
            android:layout_marginStart="8dp"
            android:textStyle="italic"
            android:textSize="12sp"
            tools:text="competition name"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_match_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="10sp"
            android:visibility="gone"
            tools:text="5601 / 123472"/>

        <android.support.v4.widget.Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_match_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="10sp"
            android:visibility="gone"
            tools:text="2018-03-12"/>

        <ImageView
            android:id="@+id/iv_more_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more_vert_vector"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_home_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:gravity="start"
            android:textColor="@color/md_grey_900"
            tools:text="hometeam"/>

        <ImageView
            android:id="@+id/iv_home_emblem"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:foreground="?android:selectableItemBackground"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/match_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_blue_grey_50"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:text="오전 3:45"/>

                <TextView
                    android:id="@+id/match_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="3 : 2"/>

                <LinearLayout
                    android:id="@+id/ll_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_home_team_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/md_grey_900"
                        tools:text="3"/>

                    <android.support.v4.widget.Space
                        android:layout_width="24dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_away_team_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/md_grey_900"
                        tools:text="2"/>


                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_match_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_black_1000"
                android:layout_gravity="center"
                tools:text="FT"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_away_emblem"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:background="?android:selectableItemBackground"/>

        <TextView
            android:id="@+id/tv_away_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/md_grey_900"
            tools:text="awayteam"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center">

        <!--<LinearLayout-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"-->
            <!--android:gravity="start|center_vertical"-->
            <!--android:layout_weight="1">-->

            <!--<ImageView-->
                <!--android:layout_width="24dp"-->
                <!--android:layout_height="24dp"-->
                <!--app:srcCompat="@drawable/ic_group_vector"/>-->

            <!--<TextView-->
                <!--android:id="@+id/tv_arena_chat_count"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginStart="8dp"-->
                <!--android:textSize="11sp"-->
                <!--android:textColor="@color/md_grey_600"-->
                <!--tools:text="0"/>-->

        <!--</LinearLayout>-->

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_match_content_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/md_grey_600"
                tools:text="매치글 0"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_player_rating_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/md_grey_600"
                tools:text="선수평가 0"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>