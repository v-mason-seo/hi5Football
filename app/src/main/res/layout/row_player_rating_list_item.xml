<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="38dp"
                android:layout_height="38dp">

                <ImageView
                    android:id="@+id/iv_player"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    tools:src="@drawable/ic_face"
                    tools:tint="@color/md_grey_700"/>

                <TextView
                    android:id="@+id/tv_player_position"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textSize="8sp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/md_blue_400"
                    android:textColor="@color/md_grey_100"
                    android:gravity="center"
                    android:layout_gravity="end|bottom"
                    android:text="MF"/>

            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/tv_player_jersey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/md_grey_700"
                android:textSize="10sp"
                android:padding="2dp"
                tools:text="12" />

            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/md_grey_900"
                android:layout_marginStart="4dp"
                tools:text="Player name"/>

            <ImageView
                android:id="@+id/iv_player_substitutions"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                tools:text="Player name"/>

            <TextView
                android:id="@+id/tv_player_subs_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:textSize="10sp"
                tools:text="10"/>


            <ImageView
                android:id="@+id/iv_goal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/icons8_soccer_ball_48"
                android:tint="@color/md_grey_800"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                tools:text="Player name"/>

            <ImageView
                android:id="@+id/iv_yellow_card1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_yellow_card_vector"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                tools:text="Player name"/>

            <ImageView
                android:id="@+id/iv_red_card"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_red_card_vector"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                tools:text="Player name"/>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_insert_player_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:textSize="12sp"
                android:gravity="end|center_vertical"
                android:text="작성"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/md_grey_100"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/md_grey_800"
                android:text="공식평점"/>

            <!--<TextView-->
            <!--android:id="@+id/tv_expert_rating"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="12sp"-->
            <!--android:layout_marginStart="8dp"-->
            <!--android:textColor="@color/md_blue_grey_500"-->
            <!--android:text="0.0"/>-->

            <TextView
                android:id="@+id/tv_expert_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_marginEnd="12dp"
                android:background="@color/md_grey_400"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/md_grey_100"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="0.0"/>

            <android.support.v4.widget.Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/md_grey_800"
                android:text="유저 평점"/>

            <!--<TextView-->
            <!--android:id="@+id/tv_user_rating"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="12sp"-->
            <!--android:layout_marginStart="8dp"-->
            <!--android:textColor="@color/md_red_400"-->
            <!--android:text="0.0"/>-->

            <TextView
                android:id="@+id/tv_user_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_marginEnd="12dp"
                android:background="@color/md_green_500"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/md_grey_100"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="7.0"/>

            <TextView
                android:id="@+id/tv_user_rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:textColor="@color/md_grey_600"
                android:text="0"/>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_show_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/md_grey_700"
                app:srcCompat="@drawable/ic_comment"/>

            <android.support.v4.widget.Space
                android:layout_width="2dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:backgroundTint="@color/md_grey_400"
                android:alpha="0.7"
                android:textColor="@color/md_grey_900"
                android:gravity="center"
                android:text="0"/>

            <ImageView
                android:id="@+id/iv_player_stats"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="6dp"
                app:srcCompat="@drawable/ic_equalizer"
                android:tint="@color/md_blue_300"
                tools:text="Player name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rb_player_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="10"
                android:visibility="gone"
                style="?android:attr/ratingBarStyleSmall"/>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>



        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_user_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/md_grey_200"/>

                <TextView
                    android:id="@+id/tv_player_user_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/md_grey_600"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>