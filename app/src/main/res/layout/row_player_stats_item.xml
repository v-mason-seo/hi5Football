<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_grey_200"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/competition_emblem"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/ic_directions"
                    android:tint="@color/md_grey_600"/>

                <TextView
                    android:id="@+id/competition_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_800"
                    android:layout_marginStart="8dp"
                    android:text="Common Name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_500"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:text="득점"/>

                <TextView
                    android:id="@+id/player_goals"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_800"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="Common Name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_500"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:text="경기출전"/>

                <TextView
                    android:id="@+id/player_appearances"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_800"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="Common Name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_500"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:text="주전"/>

                <TextView
                    android:id="@+id/player_lineups"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_800"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="Common Name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_500"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:text="교체(in / out)"/>

                <TextView
                    android:id="@+id/player_substitue_in_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_800"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="Common Name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_500"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:text="벤치"/>

                <TextView
                    android:id="@+id/player_substitute_on_bench"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_800"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="Common Name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_500"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:text="레드카드"/>

                <TextView
                    android:id="@+id/player_redcards"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_800"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="Common Name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_500"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:text="옐로우카드"/>

                <TextView
                    android:id="@+id/player_yellowcards"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_800"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="Common Name"/>

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>