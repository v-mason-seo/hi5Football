<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="0dp"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="4dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/contents_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/md_grey_900"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:text="Implement Search Using RxJava Operators" />

                <TextView
                    android:id="@+id/contents_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:lineSpacingExtra="1.2dp"
                    android:textColor="@color/md_grey_700"
                    android:textSize="13sp"
                    tools:text="Nowdays, most of the applications that we user in our daily life come with a search...." />

            </LinearLayout>

            <ImageView
                android:id="@+id/contents_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_image"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                app:srcCompat="@drawable/ic_face"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <!--<TextView-->
                        <!--android:id="@+id/board_name"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:layout_marginStart="8dp"-->
                        <!--android:textSize="12sp"-->
                        <!--android:visibility="gone" />-->

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="User name"
                        android:textColor="@color/md_grey_700"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/reg_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:textColor="@color/md_grey_400"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp"
                        tools:text="4주 전"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/board_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:textSize="12sp"
                        android:gravity="top"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/like_count2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom|right"
                        android:paddingStart="2dp"
                        android:textColor="@color/md_grey_600"
                        android:textSize="13sp"
                        tools:text="Hi-Five 123" />

                    <TextView
                        android:id="@+id/scrap_count2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom|right"
                        android:paddingStart="14dp"
                        android:textColor="@color/md_grey_600"
                        android:textSize="13sp"
                        tools:text="스크랩 45" />

                    <ImageView
                        android:id="@+id/iv_liked"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_vertical|end"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_clap_vector"
                        android:tint="@color/md_grey_700"/>

                    <TextView
                        android:id="@+id/like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="2dp"
                        android:visibility="gone"
                        android:text="0"
                        android:textColor="@color/md_grey_400"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iv_scraped"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical|end"
                        app:srcCompat="@drawable/ic_scrap_border"
                        android:tint="@color/md_grey_700"/>

                    <TextView
                        android:id="@+id/scrap_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="2dp"
                        android:visibility="gone"
                        android:text="0"
                        android:textColor="@color/md_grey_400"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/comment_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical|end"
                app:srcCompat="@drawable/ic_comment"
                android:tint="@color/md_grey_700"/>

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="4dp"
                android:textColor="@color/md_grey_400"
                android:textSize="13sp"
                tools:text="0" />



        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>