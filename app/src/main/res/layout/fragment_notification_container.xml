<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ddastudio.hifivefootball_android.content_list.ContentListContainerFragment">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/tabs_notification_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_small_height"
        android:background="@color/md_grey_50"
        android:elevation="3dp"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/tab_left_padding"
        android:paddingRight="@dimen/tab_right_padding"
        app:stl_customTabTextLayoutId="@layout/tab_custom_textview"
        app:stl_customTabTextViewId="@+id/custom_text"
        app:stl_defaultTabTextColor="@color/md_grey_200"
        app:stl_defaultTabTextHorizontalPadding="18dp"
        app:stl_dividerColor="@color/transparent"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="@color/md_blue_grey_500"
        app:stl_indicatorCornerRadius="18dp"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorGravity="center"
        app:stl_indicatorThickness="21dp"
        app:stl_underlineColor="@color/transparent"
        app:stl_underlineThickness="0dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_notification_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_weight="1"/>

</LinearLayout>